" Syntax highlight
syntax on

" 256 colors
set t_Co=256

" Colorscheme
colorscheme twilight256

" Encoding
set encoding=utf8

" Line numbers
set number

" Indent
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" Enable mouse
set mouse=a

" Highlight Search
set hlsearch

" Case insensitive search
set ignorecase

" Disable backup
set nobackup
set nowb
set noswapfile

" Auto update when file is changed from another place
set autoread
